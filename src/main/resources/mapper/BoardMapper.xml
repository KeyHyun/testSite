<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.devkey.mapper.BoardMapper">
    <select id="selectOtherList" parameterType="BoardDto" resultType="BoardDto">
        SELECT @ROWNUM:=@ROWNUM + 1 AS ROWNUM, A.*
        FROM
            (
                SELECT  DIVISION1,
                        DIVISION2,
                        TITLE,
                        CONTENT_NO,
                        THUMBNAIL,
                        VIEWS,
                        REG_NM,
                        REG_DT
                FROM DEVKEY.TB_BBS
                ORDER BY CONTENT_NO ASC) A,
                (SELECT @ROWNUM:=0) R
    </select>
</mapper>